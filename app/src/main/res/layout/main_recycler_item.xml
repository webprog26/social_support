<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:elevation="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wrapper">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardContent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:id="@+id/clientPhoto"
            android:layout_margin="4dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorFAB1"
            android:src="@drawable/default_client_avatar"/>
        <TextView android:id="@+id/clientSecondName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="2dp"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_toRightOf="@+id/clientPhoto"
            android:layout_marginLeft="10dp"/>
        <TextView android:id="@+id/clientFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="2dp"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_toRightOf="@+id/clientPhoto"
            android:layout_below="@+id/clientSecondName"
            android:layout_marginLeft="10dp"/>
        <TextView android:id="@+id/clientPatronymic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="2dp"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_toRightOf="@+id/clientPhoto"
            android:layout_below="@+id/clientFirstName"
            android:layout_marginLeft="10dp"/>
        <TextView android:id="@+id/clientAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="2dp"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_toRightOf="@+id/clientPhoto"
            android:layout_below="@+id/clientPatronymic"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/dateAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="4dp"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardContent">
            <TextView android:id="@+id/clientCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>